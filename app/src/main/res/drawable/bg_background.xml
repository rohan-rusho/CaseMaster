<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base layer: Deep premium blue gradient -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="270"
                android:startColor="#101C32"
                android:endColor="#253354" />
        </shape>
    </item>

    <!-- Top refined gold highlight -->
    <item android:top="0dp" android:bottom="0dp">
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="650dp"
                android:centerX="50%"
                android:centerY="0%"
                android:startColor="#1976D2"
                android:endColor="#00FFD700"/>
        </shape>
    </item>

    <!-- Edge vignette with soft luxury navy -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="1200dp"
                android:centerX="50%"
                android:centerY="50%"
                android:startColor="#00000000"
                android:endColor="#18213A"/>
        </shape>
    </item>

    <!-- Bottom shadow for anchored depth -->
    <item android:gravity="bottom">
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="90"
                android:startColor="#660B1930"
                android:endColor="#00000000"/>
        </shape>
    </item>

</layer-list>